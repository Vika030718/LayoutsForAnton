.contacts
	background-color: #f5f6f8
	padding-top: 40px;
	&__main-title
		font-family: CochinItalic;
		font-size: 55px;
		margin-bottom: 50px;
		text-align: center;
		@media(max-width: $sm)
			font-size: 35px;
	&__wrapper
		max-width: 920px;
		margin: auto;
		width: 100%;
	&__block
		background-color: #ffffff
		padding: 40px;
		margin-bottom: 30px;
		@media(max-width: $sm)
			padding: 20px;
			margin-bottom: 20px;
	&__title
		font-size: 24px;
		margin-bottom: 20px;
		@media(max-width: $sm)
			font-size: 20px;
			margin-bottom: 10px;
	&__text
		color:#747474
		font-size: 16px;
		@media(max-width: $sm)
			font-size: 14px;
			margin-bottom: 20px;
	&__btn
		margin-top: 30px;
		max-width: 220px;
		@media(max-width: $sm)
			margin-top: 20px;
	&__form
		margin-top: 35px;
	&__phone
		font-size: 16px;
		margin-top: 25px;
		display: flex;
		align-items: center;
	&__phone-icon
		font-size: 37px;
		margin-right: 12px;
		