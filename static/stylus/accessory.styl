	padding: 20px;
	&__title
		font-size: 13px;
		margin-bottom: 15px;
	&__price
		font-size: 13px;
		margin-bottom: 20px;
	&__img
		margin-bottom: 15px;
		width: 100%;
	&__btn
		font-size: 13px;
		padding: 7px 13px;
