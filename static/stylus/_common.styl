/* common
_______________________________________________*/
html, body
   height: 100%
   min-height: 100%
body 
   background-color: $background-color
   color: $main-font-color
   font-family: brandonRegular, sans-serif
   line-height: 1.5em
   font-size: 16px
   padding-top: 143px;
   padding-right: 0px!important
   @media(max-width: $md)
      padding-top: $headerMobileHeight;
.mail-to
   text-decoration: underline;
.close
   opacity: 1!important;
   cursor: pointer!important;
   z-index: 1;
.checkbox 
   font-size:14px;
   position:relative;
   padding:6px 0;
   color:#555a69;
   label
      font-size: 14px;
      color: #555a69;
      padding-left: 30px;
      margin-right: 0
      cursor: pointer
      position: relative
      font-weight: normal;
      &:before
         content: ""
         position: absolute
         left: 0;
         width: 16px;
         height: 16px;
         border: 1px solid #555a69;
         top: 1px;
         top: 50%;
         margin-top: -9px;
input.checkbox__input[type=checkbox]:checked + label
   &:after
      content: ""
      background-color: #555a69
      position: absolute
      left: 1px;
      top: 50%;
      margin-top: -9px;
      content: "\f00c";
      font-family: fontAwesome;
      line-height: 16px;
      background-color: transparent
input[type=radio],
input[type=checkbox]
   opacity: 0;
   outline: 0!important;
   appearance: none;
.input
   border: 1px solid #838491;
   background-color: #FFFFFF;
   width: 100%;
.select
   font-size: 16px;
   position: relative;
   // max-width: 220px;
   padding: 8px 30px 8px 15px;;
   transition: color .2s ease-out, border-color .2s ease-out;
   color: #000;
   border: 1px solid #000;
   width: 100%;
   cursor: pointer
   background-color: transparent
   -webkit-appearance: none;
   -moz-appearance: none;
   appearance:none
   &:after 
      font-family: fontAwesome;
      font-size: 18px;
      font-weight: bold;
      position: absolute;
      top: 50%;
      right: 20px;
      margin-top: -6px;
      content: '\f107';
   &__wrapper
      position: relative;
      &:after
         font-family: FontAwesome;
         font-size: 20px;
         position: absolute;
         content: '\f107';
         right: 10px;
         top: 17px;
         pointer-events: none
.textarea
   font-size: 16px;
   border: 1px solid #838491;
   background-color: #FFFFFF;
   width: 100%;
   padding: 20px 14px 8px;
   color: #555a69;
   font-weight: normal;
   font-family: brandonRegular
.break
   @media(max-width: $sm)
      display: none
.img
   width: 100%;
.wrapper
   margin-left: auto
   margin-right: auto
   max-width: 1240px
.num
   color: #b1b1b1;
   font-size: 12px;
.show
   display: block!important
.hide
   display: none!important
.table
   display: table;
   white-space: nowrap;
   margin-bottom: 0;
   &__cell
      display: table-cell
   &__row
      display: table-row
   &__scroll
      overflow-x: auto;
.col-xxs-12
   @media(max-width: $xs)
      width: 100%
.link
   text-decoration: underline;
   color: rgba(0,0,0,.5);
.link-active
   background-color: $hover-main-color
   color: #ffffff!important
   &:before
      content: "\f00d";
   @media(max-width: $lg)
      background-color: transparent
      color: #000000!important
.icon-active
