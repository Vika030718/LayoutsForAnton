   &_return
      // color: rgba(85,90,105,.5);
      position: relative
      font-size: 14px;
      transition: color .2s ease-out
   &_return-pale
      opacity: 0.5;
      // &:hover
      //   .btn_return-img
      //      opacity: 1;
   &_return-img
      width: 22px;
      padding-left: 10px;
      transform: scale(-2, 2);
      display: inline-block;
      margin-left: 10px;
      // opacity: 0.3;
      margin-bottom: 3px;
   &_return-right
      .btn_return-img
         transform: scale(2, 2);
         margin-right: 10px;
   &_dark
      background-color: #000000;
      color: #ffffff
      text-transform: uppercase
      transition: color .2s ease-out, background-color .2s ease-out, border-color .2s ease-out
      &:hover
         background-color: $hover-main-color
         color: #ffffff
   &_transperent
      background-color: transparent
      border: 1px solid #000;
      text-transform: uppercase
      transition: color .2s ease-out, background-color .2s ease-out, border-color .2s ease-out
      &:hover
         color: $hover-main-color
