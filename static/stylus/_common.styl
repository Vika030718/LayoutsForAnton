      align-items: center;
   &__main-title
      font-size: 18px;
      text-transform: uppercase
      margin-bottom: 40px;
      @media(max-width: 1230px)
         margin-bottom: 20px;
         font-size: 16px;
   &__title
      font-size: 14px;
      text-transform: uppercase
      margin-bottom: 20px;
   &__subtitle
      font-size: 14px;
      text-transform: uppercase
      margin-bottom: 20px;
      margin-top: 25px;
      @media(max-width: 1230px)
         margin-top: 20px;
         margin-bottom: 10px;
         font-size: 12px;
   &__description
      font-family: CochinItalic, sans-serif;
      font-size: 20px;
      margin-bottom: 35px;
      max-width: 300px;
      @media(max-width: 1230px)
         margin-bottom: 15px;
         font-size: 18px;
   &__link
      font-family: CochinItalic, sans-serif;
      font-size: 20px;
      color: #ffffff
      @media(max-width: 1230px)
         font-size: 18px;
   &__controls
      width: 100%;
      position: absolute
      top: 50%;
      display: flex;
      justify-content: space-between;
      left: 0
      right: 0
   &__controls-right,
   &__controls-left
      position: relative;
   &__controls-right:before,
   &__controls-left:before
      position: absolute
      content: ''
      width: 29px;
      height: 58px;
      margin-top: -29px;
      z-index: 2;
   &__controls-right:before
      background-image: url('../img/slider__arrow-right.png');
      right: 15px;
   &__controls-left:before
      background-image: url('../img/slider__arrow-left.png');
      left: 15px;
/* block: product
_______________________________________________*/
.product
   padding-bottom: 30px
   padding-top: 30px;
   &__item
      text-align: center
      border: 4px solid transparent;
      max-width: 300px;
      margin: 0 auto 30px;
      position: relative
      &:hover
         border: 4px solid #000;
         .product__info
            background-color: #000;
            color: #fff;
         .product__name
            color: #fff;
            &:after
               background: #fff;
   &__name
      font-size: 16px;
      padding: 10px 0 35px;
      position: relative
      font-family: cochinRegular
      display: block
      &:after
         content: "";
         position: absolute;
         bottom: 10px;
         left: 50%;
         width: 20px;
         height: 3px;
         margin-left: -10px;
         background: #000;
   &__price
      padding-bottom: 20px
   &__price_old
      font-size: 22px;
      padding-right: 5px;
      text-decoration: line-through;
   &__price_new
      font-size: 27px;
   &__img
      margin: auto
/* block: product-search
_______________________________________________*/
.product-search
   height: 354px
   overflow: hidden
   margin-bottom: 10px
   position: relative
   &__img
      max-width: none
      height: 100%
      margin-left: -175px;
      left: 50%;
      position: absolute;
   &__name
      width: 70%;
      height: 75px;
      width: 130px
      margin: 0 auto;
      position: absolute;
      bottom: 0
      background-color: #fff
      left: 50%;
      margin-left: -65px;
      font-family: cochinRegular
   &__title
      font-size: 16px
      text-align: center
      padding-top: 5px
      &:after
         content: "";
         position: absolute;
         bottom: 0;
         left: 50%;
         width: 20px;
         height: 3px;
         margin-left: -10px;
         background: #000;
   &__title_search
      &:after
         bottom: 30px;
   &__price
      text-align: center;
      position: absolute;
      width: 100%;
      font-size: 18px
      bottom: 0;
/* block: star
_______________________________________________*/
.star
   &:before
      font-family: fontAwesome
      content: "\f1db"
      top: 12px
      left: 6px
      position: absolute
      font-size: 40px;
   &:after
      font-family: fontAwesome
      content: "\f006"
      top: 12px
      left: 11px
      position: absolute
      font-size: 26px;
/* block: back
_______________________________________________*/
.back
   padding-bottom: 15px
   @media(max-width: $md)
      padding-bottom: 0
      margin-bottom: 20px;
      margin-top: 20px
   &:hover
      .back__text
         color: $hover-main-color
         &:before
            color: #fff
      .back__link
         &:after
            content: "\f111"
            color:  $hover-main-color
         &:before
            color: #fff
   &__link
      display: inline-block;
      color: #000;
      padding-left: 15px;
      position: relative
      &:before
         content: "\f104"
         font-family: fontAwesome
         font-size: 22px
         color: #000
         position: absolute;
         left: 7px
         z-index: 1
      &:after
         content: "\f1db"
         font-family: fontAwesome
         font-size: 30px
         color: #000
         position: absolute;
         left: 0
   &__text
      padding-left: 20px;
      text-transform: uppercase
      font-family: brandonBold

/* block: scale
_______________________________________________*/
.scale
   &__item
      background-color: #fff
      width: 45px;
      height: 5px;
      display: inline-block;
      border: 1px solid $separator-color;
      vertical-align: middle;
   &__item_active
      background-color: #8691A8
      border-color: #8691A8;
   &:before
      content: "+"
      vertical-align: middle;
   &:after
      content: "-"
      vertical-align: middle;
   &_gallery
      margin-right: 20px;
      &:before,
      &:after
         content: ""
   &_compare
      display: flex;
      align-items: center;
      &:before,
      &:after
         content:""
      .scale__item
         width: 22px;
      
/* block: advertising
_______________________________________________*/
.advertising
   position: relative
   &__img
      display: none
      margin: auto;
      @media(min-width: $lg)
         display: block
   &__over
      padding: 15px 40px
      position: absolute
      bottom: -36%;
      left: 50%;
      max-width: 54%;
      margin-left: -27%;
      background-color: #fff;
      text-align: center;
      @media(max-width: $lg)
         position: relative
         bottom: 0;
         left: 0;
         margin: auto
   &__title
      font-size: 24px;
      line-height: 26px;
      font-family: CochinItalic
/* block: purchase
_______________________________________________*/
.purchase
   display: flex;
   @media(max-width: $md)
      display: block
   &__description
      font-size: 12px;
      line-height: 1.4em;
      border-top: 1px solid #000;
      border-right: 1px solid #000;
      border-bottom: 1px solid #000;
   &__description-wrapper
      padding-top: 20px;
      padding-right: 10px;
      padding-bottom: 20px;
      padding-left: 10px;
   &__detailed
      line-height: 1.4em;
      display: -webkit-box;
      display: flex;
      border-top: 1px solid #000;
      border-bottom: 1px solid #000;
      align-items: center;
      @media(max-width: $md)
         border-top: none;
   &__detailed-wrapper
      display: flex;
      align-items: center;
   &__img-block
      position: relative;
      overflow: hidden;
      height: 354px;
      border-right: 1px solid #000;
      @media(max-width: $md)
         border-right: none;
   &__img
      position: absolute;
      left: 50%;
      max-width: none;
      height: 100%;
      margin-left: -175px;
   &__description-status
      color: #808080
      font-size: 14px
      padding-top: 10px
   &__edit
      padding-left: 20px;
.article
   &_product
      margin: 40px 0;
.pagination
   display: flex;
   justify-content: space-between;
   align-items: center
   color: #555a69
   font-size: 18px;
   &__prev
      color: #555a69
      padding-right: 25px;
      padding-top: 15px;
      border-top: 1px solid $separator-color
      padding-left: 5px;
      &:before
         height: 17px;
         padding-right: 0px;
         content:  url("../img/arrow__article.png");
         transform: rotate(180deg);
         display: inline-block;
         padding-left: 20px;
   &__next
      padding-left: 25px;
      border-top: 1px solid $separator-color
      padding-top: 15px;
      padding-right: 5px;
      &:after
         height: 17px;
         padding-left: 20px;
         content:  url("../img/arrow__article.png");
   &_inactive
      color: #bebebe;
      &:hover
         text-decoration: none;
         color: #bebebe;
         cursor: default;
      &:before, &:after
         opacity: 0.2;
.accent
   color: #000000;

