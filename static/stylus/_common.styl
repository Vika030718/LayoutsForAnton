.separator
   border-top: 1px solid $separator-color
   padding-top: 40px;
a.btn,
i.btn,
img.btn
   border-radius: 0
   display: inline-block;
   text-decoration: none;
   width: 100%
   font-size: 15px;
   padding-top: 15px;
   padding-bottom: 15px;
   width: 100%
   line-height: 1em;
   &:hover
