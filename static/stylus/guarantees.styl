@require '__variables'
@require '__fonts'

.guarantees-header
	display: flex;
	background-image: url("../img/guarantees-header.jpg");
	background-repeat: no-repeat
	background-size: cover;
	height: 380px;
	color: #ffffff;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	text-align: center;
	position: relative;
	overflow: hidden;
	margin: 0 15px;
	background-position: center;
	padding: 0 10px;
	&__title
		font-size: 55px;
		margin-bottom: 15px;
		font-family: CochinItalic
		@media(max-width: $sm)
			font-size: 42px
	&__subtitle
		font-size: 22px;
		font-family: CochinItalic
		margin-bottom: 50px;
		@media(max-width: $sm)
			font-size: 22px
	&__btn
		background-image: url("../img/arrow_return.svg");
		background-color: #f3f2f7;
		width: 100px;
		height: 100px;
		position: absolute;
		bottom: 0;
		margin-bottom: -50px;
		border-radius: 100px;
		background-repeat: no-repeat
		transform: rotate(90deg);
		background-position: 28px center;
		background-size: 23%;
.guarantees-info
	padding: 70px 0 70px 0;
	background-color: #f4f4f4;
	margin: 0 15px;
	background-color: #f3f2f7;
	@media(max-width: $md)
		padding: 30px 0 30px 0;
	&__title
		font-size: 26px;
		font-family: CochinItalic;
		margin-bottom:25px;
		position: relative
		padding-left: 60px;
		&:before
			content:""
			background-image: url("../img/guarantees-title-icon.png");
			position: absolute
			left:0
			width: 46px;
			height: 40px;
			top: 50%
			margin-top:-20px;
		@media(max-width: $md)
			font-size: 22px;
	&__text
		font-size: 18px;
		line-height: 1.4em;
		margin-bottom: 25px;
		@media(max-width: $md)
			margin-bottom: 15px;
			font-size: 14px
	&__list
		font-size: 16px;
		color: #747474
	&__item
		padding-left: 35px;
		margin-bottom: 15px;
		position: relative
		&:before
			content: "\f00c";
			font-family: fontAwesome
			position: absolute
			color: #007c6f
			left:0
	&__item-no
		position: relative;
		&:before
			content: "\f00d";
			color: #902141
	&__left-block
		align-items: center;
		justify-content: center
		display: flex;
		margin-top: 20px;
		img
			width: 100%;
			max-width: 348px;
.guarantees-contact
	display: flex;
	justify-content: center
	padding: 35px 15px;
	align-items: center;
	@media(max-width: $md)
		flex-direction: column;
		padding-bottom: 10px;
	&__title
		font-family: CochinItalic;
		font-size: 36px;
		margin-right:40px;
		@media(max-width: $md)
			margin-bottom: 10px;
			margin-right:0
.contact-item
	border: 1px solid #000000
	border-radius: 25px;
	padding: 15px 30px;;
	margin-right: 15px;
	font-size: 16px;
	color: #747474
	margin-bottom: 5px;
	margin-top: 5px;
	@media(max-width: $md)
		margin-top: 10px
		margin-right:0
	&__accent
		color: #000000
.guarantees-bottom
	background-image: url("../img/shop__info-block.jpg");
	padding-top: 50px;
	color: #ffffff
	position: relative
	margin: 0 15px 30px 15px;
	&:before
		position: absolute
		width: 100%;
		height: 100%;
		background-color: #2029318c;
		content:""
		top: 0
		z-index: 0
	&__text
		line-height: 1.4em;
	&__title
		font-family: CochinItalic;
		font-size: 36px;
		text-align: center
		margin-bottom: 50px;
		z-index: 2;
		position: relative;
		padding: 0 10px;
		@media(max-width: $md)
			font-size: 30px;
	&__left-block
		padding-right: 70px;
		border-right: 1px solid rgba(255, 255, 255, 0.2);
		text-align: right
		max-width: 600px;
		width: 100%;
		@media(max-width: $md)
			padding-right: 15px;
			padding-left: 15px;
			max-width:none;
			border-right:none;
			text-align:left
			margin-bottom: 15px;
	&__right-block
		padding-left: 70px;
		max-width: 530px;
		@media(max-width: $md)
			padding-right: 15px;
			padding-left: 15px;
			max-width:none;
	&__footer
		padding: 50px 15px 40px 15px
		color: #ffffff
		font-size: 18px;
		line-height: 1.2em
		background-color: #28344182;
		margin-top: 40px;
		z-index: 2;
		position: relative;
		@media(max-width: $md)
			font-size: 14px;
			padding:20px 10px;
	&__footer-text
		max-width: 890px;
		width: 100%;
		margin: auto;
	&__body
		display: flex;
		justify-content: center;
		z-index: 2;
		position: relative;
		@media(max-width: $md)
			flex-direction: column;
			font-size: 14px;
			padding:0 10px;
	&__address
		padding-left: 50px;
		margin-top: 20px;
		position: relative
		display: inline-block;
		&:before
			position: absolute;
			top: 0;
			left: 0;
			width: 33px;
			height: 45px;
			content: '';
			background-image: url(../img/shop-info__address.png);
	&__address-title
		margin-bottom: 15px;
	&__list
		margin-bottom: 25px;
		margin-top:20px;
	&__item
		position: relative
		padding-left:35px;
		margin-bottom: 7px;
		&:before
			font-family: fontAwesome;
			position: absolute;
			left: 0;
			content: '\f00c';
	