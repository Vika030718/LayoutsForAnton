@require '__variables'
@require '__fonts' 
/* block: bootstrap 
_______________________________________________*/
.dropdown
   display: block!important;
.dropdown-menu
   box-shadow: 0 0 12px rgba(0,0,0,.175);
   padding-top: 0;
   border: none;
.dropdown-menu a
   padding-left: 0;
.dropdown:hover .submenu 
    display: block;
.h1, .h2, .h3, .h4, .h5, .h6, h1, h2, h3, h4, h5, h6
   font-family: inherit;
   font-weight: 500;
   line-height: 1.1;
   color: inherit;
.num
   font-size: 12px;
   color: #b1b1b1;
   margin-left: 2px;
.btn
   background-image: none!important;
   box-shadow: none!important;
   padding-top: 15px!important;
   padding-bottom: 15px!important;
   text-shadow: none!important;
   &_dark
      color: #ffffff!important
      &:hover
         background-color: $hover-main-color!important;
p
   font-family: brandonRegular, sans-serif
   line-height: 1.2em;
   margin-bottom: 0px;
body 
   background-color: $background-color
   color: $main-font-color
   font-family: brandonRegular, sans-serif!important
   line-height: 1.2em
   font-size: 16px
.text-right
   justify-content: flex-end;
.text-center
   justify-content: center;
a, a:focus
   color: #000000
   transition: color .2s ease-out
   &:hover
      color: #000000
      text-decoration: underline
ol, ul
   list-style: none outside none;
   margin: 0;
   padding: 0;
   border: 0;
   outline: 0;
input
   margin-bottom: 0;
input:focus, textarea:focus
   border: 1px solid #838491!important;
   box-shadow: none!important
input.search__input:focus
   border: none!important;
.dropdown-menu li > a:hover, .dropdown-menu .active > a, .dropdown-menu .active > a:hover
   color: #000000;
   background-color: transparent!important;
/*______________________________ scrollbar ______________________________*/
::-webkit-scrollbar
   width: 6px;
   height: 6px;
::-webkit-scrollbar-thumb
    background-color: #cccccc
    border-radius: 4px;
   
/* block: common
_______________________________________________*/
.wrapper_not-adaptive
   width: 995px!important;
   margin: auto;
.wrapper
   max-width: 995px
   margin-left: auto
   margin-right: auto
.page_not-adaptive
   padding-top: 0;
.link
   text-decoration: underline;
   color: rgba(0,0,0,.5);
/* block: logo
_______________________________________________*/
.logo
   height: auto
   &__img
      max-width: 190px
      width: 100%
   &_print
      margin: auto;
      display: block;
      padding-top: 40px;
      padding-bottom: 20px;
   &__img_onscroll
      display: none;
      max-width: 100px
      width: 100%
/* header
_______________________________________________*/
.menu
   display: flex
   justify-content: space-between
   margin: 0!important
   width: 100%
   &__link
      display: inline-block
      padding-bottom: 12px!important;
      padding-top: 12px!important;
      text-transform: uppercase
   &__item
      padding: 0 20px;
      position: static
      font-size: 13px;
   &__item_jornal
      font-family: CochinItalic
      font-size: 18px;
      text-transform: lowercase
   &__item_shop
      font-size: 13px;
   &__item_help
      font-size: 12px;
   &__list
      border-right: 1px solid $separator-color
      padding: 0 30px 0;
      margin: 15px 0;
      flex:  1 1 auto;
   &__list-body
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
   &__sublist
      display: flex;
      flex-direction: column
      justify-content: center
   &__list_last
      border-right: none
   &__list_accessories
      flex-direction: column;
      justify-content: space-between;
      display: flex;
   &__list_sets
      flex: 0 0 110px;
   &__column
      padding-top: 15px;
      padding-bottom: 15px;
      display: flex;
      flex-direction: column;
.user-menu
   display: inline-block
   padding: 0 15px;
   &__item
      color: #000000
      display: inline-block
      float: none
      line-height: 30px;
      margin: 0 !important
   &__link
      font-size: 12px
      padding: 15px 10px
      color: #000000!important;
      transition: none;
      text-transform: uppercase
      background-color: transparent!important
   &__link_submenu
      padding: 6px!important
   &__link_lang
      padding: 8px 28px 8px 6px!important;
      &:after
         content: "\f107";
         font-family: FontAwesome
         font-size: 17px
         margin-left: 6px;
         position: absolute;
   &__link_lang.link-active
      &:after
         content: "\f106";
         font-family: fontAwesome;
   &__lang
      padding: 20px 18px!important;
      left: auto;
      right: 0;
      margin-top: 30px;
      &:before
         position: absolute
         top: -17px
         right: 8px;
         width: 0; 
         height: 0; 
         border-left: 17px solid transparent;
         border-right: 17px solid transparent;
         border-bottom: 17px solid rgba(206, 206, 206, 0.31);
         content: ''
      &:after
         position: absolute
         top: -15px
         right: 10px;
         width: 0; 
         height: 0; 
         border-left: 15px solid transparent;
         border-right: 15px solid transparent;
         border-bottom: 15px solid #ffffff;
         content: ''
.mobile
   display: none
   &__header
      align-items: center;
      border-bottom: 1px solid $separator-color
      display: flex;
      justify-content: space-between;
      padding-bottom: 10px
      padding-top: 10px
      &:after,
      &:before
         content: none!important
   &__icon
      background-color: #000000
      border-radius: 0
      border: 1px solid $separator-color
      color: #fff
      float: right;
      font-size: 20px
      height: 40px
      line-height: 20px;
      margin-bottom: 8px;
      margin-left: 5px
      margin-right: 0
      margin-top: 8px;
      padding: 9px 10px;
      position: relative;
      text-align: center
      transition: background-color 0.1s ease-in-ou
      width: 40px
      &:hover
         cursor: pointer
   &__icon
      .fa
         color: #fff
         font-size: 20px
   &__icon-lang
      font-size: 16px;
   &__head
      padding-bottom: 15px
      padding-top: 15px
   &__link
      font-size: 16px
   &__logo
      max-width: 120px
.submenu
   width: 100%
   text-transform: none
   margin-top: 0;
   box-shadow: none!important;
   top: 45px;
   background: transparent;
   &__top-line
      padding: 30px;
      background: transparent;
   &__title
      color: #000
      font-size: 13px;
      font-weight: normal;
      line-height: 19px;
      padding: 0;
      white-space: normal
      margin-bottom: 30px;
      text-transform: uppercase
   &__style
      display: inline-block
      padding-top: 8px
      position: relative
   &__img-block
      background-image: url("../img/submenu__img.jpg");
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      overflow: hidden;
      height: 100%;
      background-repeat: no-repeat;
      background-size: cover;
      color: #fff;
   &__img-wrapper
      padding: 0;
   &__img-caption
      text-transform: uppercase;
      font-size: 14px;
      margin-bottom: 10px;
      color: #ffffff
   &__img-title
      font-family: CochinItalic;
      font-size: 50px;
      line-height: 1em;
      padding-bottom: 20px;
      color: #ffffff
      text-align: center;
      max-width: 310px;
   &__img-btn
      width: 100%;
      max-width: 200px;
      margin-bottom: 10px;
      padding-right: 10px;
      color: #fff!important;
      border: 1px solid #fff;
   &__link
      font-size: 14px;
      line-height: 21px!important;
      color: #6a6a6a!important
      position: relative
      display: inline-block!important;
      padding-right: 0!important;
      .num
         position: absolute;
         top: 3px;
         right: -35px;
         width: 30px;
      &:hover
         text-decoration: underline!important
         color: #000000!important
   &__link_last
      margin-top: 30px;
      display: inline-block;
      color: #000000!important
      .num
         color: #000000
         top: 3px;
   &__annotation
      height: 79px;
      position: absolute;
      text-align: center;
      top: 156px;
      width: 100%;
   &__subtitle
      background: #020100;
      color: #fff;
      display: inline-block;
      font-family: FrancoisOne, sans-serif;
      font-size: 14px;
      line-height: 19px;
      padding: 1px 12px;
      text-transform: uppercase;
   &__author
      background: #ffffff;
      color: #000000;
      font-family: BrandonTextRegular, sans-serif;
      font-size: 11px;
      height: 100%
      line-height: 13px;
      margin: 0 auto;
      padding: 17px 20px 0;
      text-transform: uppercase;
      width: 120px;
   &__line
      display: flex;
      position: relative
      box-shadow: 0 0 12px rgba(0,0,0,.175);
      background-color: #ffffff
      &:before
         position: absolute
         top: -17px
         left: calc( 41.66666667% - 223px - 2px);
         width: 0; 
         height: 0; 
         border-left: 17px solid transparent;
         border-right: 17px solid transparent;
         border-bottom: 17px solid rgba(206, 206, 206, 0.31);
         content: ''
      &:after
         position: absolute
         top: -15px
         left:  calc( 41.66666667% - 223px );
         width: 0; 
         height: 0; 
         border-left: 15px solid transparent;
         border-right: 15px solid transparent;
         border-bottom: 15px solid #ffffff;
         content: ''
   &__item
      flex: 1 1 25%;
.header
   position: static!important;
   top: 0;
   width: 100%;
   z-index: 3;
   background-color: #ffffff;
   margin-left: 0;
   height: $headerheight
   &_onscroll
      z-index:4;
      transition: margin-top .2s ease-in-out
      @media(min-width: $lg)
         margin-top: -32px;
         height: 82px;
         background-color: rgba(255, 255, 255, 0.85);
         .logo__img_onscroll
            display: block;
         .logo__img
            display: none;
         .search
            margin-top: -10px;
         .menu__item
            padding: 4px 20px;
         .header__cart
            position: absolute;
            right: 0;
            bottom: -40px;
            // z-index: 3;
   &_active
      margin-left: 0;
   &__separator
      border-top: none
   &__navbar
      margin-bottom: 0
      position: relative
   &__search
      font-size: 24px
      &:hover
         cursor: pointer
   &__search-icon
      vertical-align: middle
      line-height: 25px;
      font-size: 14px;
   &__input
      background: none;
      border-radius: 0;
      border: 2px solid transparent
      color: #888888
      font-size: 12px;
      font-style: italic;
      max-width: 200px
      padding: 2px 5px;
      vertical-align: middle
      width: 100%
   &__link
      display: block
      font-size: 12px
   &__head
      display: flex;
      margin: 0;
      padding-bottom: 15px
      position: relative
      justify-content: center;
      margin-top: 1px;
.header-mobile
   display: none
   padding: 30px 15px;
   align-items: center;
   justify-content: space-between;
   border-bottom: 1px solid rgba(0,0,0,.15);
   position: fixed;
   top: 0;
   width: 100%;
   z-index: 4;
   background-color: #ffffff;
   font-size: 44px;
   height: $headerMobileHeight
   &__icon
      max-width: 38px;
      width: 100%;
      padding: 0 5px;
   &__icon-menu-close
      display: none
   &__item
      flex: 1 1 33.33%;
      display: flex;
      align-items: center;
   &__cart
      position: relative
   &__num
      width: 20px;
      height: 20px;
      background-color : #000000;
      position: absolute   
      right: 0;
      top: 50%;
      border-radius: 20px;
      font-size: 9px;
      color  : #ffffff;
      text-align: center;
      line-height: 20px;
      font-family: brandonBold
.menu-open
   .header-mobile__icon-menu
      display: none
   .header-mobile__icon-menu-close
      display: block
.head
   &__item
      display: flex;
      align-items: center;
      position: static;
      text-transform: uppercase
      flex: 0 0 250px;
      padding: 0 15px;
   &__item-logo
      display: flex;
      align-items: center;
      flex: 0 0 201px;
      padding: 0 15px;
.top-line
   display: flex;
   justify-content: space-between;
   &__order
      font-size: 12px
      text-transform: uppercase
      border-right: 1px solid $separator-color     
      padding-right: 10px;
      margin-right: 10px  
      line-height: 1em  
   &__shops
      font-size: 12px
      line-height: 1em  
      color: #646464
   &__text
      display: flex;
      padding-top: 15px;
.cart-popup
   min-width: 300px!important;
   right: 0!important;
   left: auto!important;
   width: 100%;
   border: none!important
   margin-top: 30px;
   &:before
      position: absolute
      top: -17px
      right: 28px;
      width: 0; 
      height: 0; 
      border-left: 17px solid transparent;
      border-right: 17px solid transparent;
      border-bottom: 17px solid rgba(206, 206, 206, 0.31);
      content: ''
   &:after
      position: absolute
      top: -15px
      right: 30px;
      width: 0; 
      height: 0; 
      border-left: 15px solid transparent;
      border-right: 15px solid transparent;
      border-bottom: 15px solid #ffffff;
      content: ''
   &__caption
      font-size: 14px;
      font-family: brandonBold;
      text-transform: uppercase;
      padding: 20px;
   &__item
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background-color: #f5f6f8;
      margin-bottom: 1px;
   &__title
      font-size: 13px
      text-transform: uppercase;
      line-height: 1.2em;
      padding-left: 10px;
   &__price
      font-size: 14px
      text-transform: uppercase;
   &__total
      padding: 20px;
      display: flex;
      justify-content: space-between;
      padding: 10px 20px 10px 80px;
      background-color: #f5f6f8;
      margin-bottom: 1px;
      align-items: center;
   &__mod
      text-decoration: underline
      color: rgba(0, 0, 0, 0.75);
      text-transform: none;
      display: block;
      padding-top: 6px!important;
      padding-left: 0!important;
   &__img
      width: 60px;
   &__link
      padding-left: 70px;
   &__btns
      padding: 20px;
/* footer
_______________________________________________*/
.footer
   min-width: 996px;
   border-top: 1px solid $separator-color
   &__bottom
      padding: 50px 0;
   &__bottom-line
      display: flex;
   &__title
      font-size: 16px;
      text-transform: uppercase;
      font-family: brandonBold
   &__link
      font-size: 13px;
   &__line
      position: relative;
      flex: 0 1 25%;
      padding-right: 15px;
      padding-left: 15px;
   &__block
      margin-top: 20px;
      // display: none;
   li
      line-height: 1.5em;
.services
   display: flex;
   width: 995px;
   margin: auto;
   &__title
      font-size: 16px;
      text-transform: uppercase;
      margin-bottom: 12px;
   &__subtitle
      font-size: 14px;
   &__item
      display: flex;
      height: 245px;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      border-right: 1px solid $separator-color
      flex: 1 1 25%;
   &__item:nth-last-child(1)
      border-right: none
      border-bottom: none
.contact-us
   background-color: #ebedf0;
   padding: 65px 0;
   &__title
      font-size: 22px;
      margin-bottom: 25px;
      text-align: center;
   &__description   
      font-family: CochinItalic
      margin: 25px auto 0 auto;
      font-size: 20px;
      text-align: center;
      max-width: 360px;
      padding: 0 15px;
.email
   display: flex;
   &__input
      padding-left: 20px;
      height: 50px;
      border: 1px solid $separator-color
      border-right: none
      min-width: 210px;
      font-size: 14px;
   &__input:focus
      border-right: none!important
   &_bottom
      margin-top: 15px;
      margin-bottom: 35px;
   &__btn
      border: 1px solid $separator-color
      max-width: 55px!important;
      font-size: 18px!important;
      text-transform: uppercase;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: #ffffff!important;
/* block: social
_______________________________________________*/
.social
   color: #000000;
   font-size: 22px
   &_product
      color: #5d6a79;
      font-size: 16px
      margin-bottom: 25px;
   &__item
      display: inline-block
      position: relative
   &__link
      display: inline-block
      height: 25px;
      margin-right: 15px;
      text-align: center
      color: inherit   
   &__icon
      transition: color .2s ease-out
      &:hover
         color: #000000   
/* block: btn
_______________________________________________*/
.btn
   border-radius: 0
   display: inline-block;
   text-decoration: none;
   font-size: 15px;
   padding-top: 15px;
   padding-bottom: 15px;
   line-height: 1em;
   background-color: transparent
   &:hover
      color: inherit
      background-color: inherit
   &_dark
      background-color: #000000;
      color: #ffffff
      text-transform: uppercase
      transition: color .2s ease-out, background-color .2s ease-out, border-color .2s ease-out
      &:hover
         background-color: $hover-main-color
         color: #ffffff
   &_transperent
      background-color: transparent
      border: 1px solid #000;
      text-transform: uppercase
      transition: color .2s ease-out, background-color .2s ease-out, border-color .2s ease-out
      &:hover
         color: $hover-main-color
         border-color: $hover-main-color
   &_cart
      margin-bottom: 15px;
/* block: search
_______________________________________________*/
.search
   box-shadow: 0 0 30px -5px #ccc;
   padding-left: 25px;
   position: absolute;
   width: 100%;
   z-index: 2;
   top: 50%;
   margin-top: -20px;
   background-color: #fff;
   &__input
      width: 100%;
      height: 49px;
      border: none!important;
      box-shadow: none!important;
      padding: 0;
   &__input:focus
      border: none!important
   &__link
      width: 70px;
      text-align: center;
      border-left: 1px solid $separator-color
      padding: 10px 0;
      font-size: 26px;
   &__form
      display: flex;
      margin-bottom: 0px;