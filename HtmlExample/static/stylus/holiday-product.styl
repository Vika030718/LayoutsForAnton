@require '__variables'
.shirt-ceremony
	min-height: $holidayProductLendingHeight
	height: $holidayProductLendingHeight
	background-image: url("../img/holiday-product/landing.jpg");
	color: #ffffff;
	display: flex
	align-items: center;
	background-position: center;
	background-size: cover;
	@media (max-width: $sm)
		height: calc(100vh - 100px);// 100px = $headerMobileHeight
		min-height: 0;
	@media (max-width: $sm) and (orientation: landscape)
		min-height: 510px;
		height: 510px;
	&__caption
		display: flex;
		flex-direction: column;
		align-items: center;
		max-width: 420px;
		text-align: center;
	&__caption-wrapper
		display: flex
		justify-content: flex-end;
		width: 100%;
		@media (max-width: $sm)
			justify-content: center;
	&__title-text
		font-size: 18px;
		text-transform: uppercase;
		letter-spacing: 7px;
	&__title
		font-size: 90px;
		font-family: CochinItalic
		line-height: 31px;
		margin-bottom: 22px;
	&__subtitle
		font-size: 56px;
		font-family: CochinItalic
		margin-bottom: 35px;
		line-height: 51px;
		@media (max-width: $sm)
			margin-bottom: 15px;
	&__description
		font-size: 18px;
		margin-bottom: 35px;
		@media (max-width: $sm)
			margin-bottom: 27px;
	&__btn
		font-size: 18px;
		margin-bottom: 18px;
		border: 1px solid #ffffff
		padding: 15px 10px;
		min-width: 230px;
		color: #ffffff
		text-align: center;
		text-decoration:none!important;
		&:focus
			color: #ffffff
	&__return
		position: absolute;
		color: rgba(255, 255, 255, 0.75);
		bottom: 35px;
		left:50%;
		margin-left: -35px;
		display: flex;
		align-items: center;
		&:focus
			color: #ffffff
		&:before
			content: ""
			font-family: FontAwesome
			font-size: 14px;
			color: #ffffff
			margin-right: 10px;
			background-image:  url("../img/holiday-product/holiday-product__arrow.png");
			width: 16px;
			height: 12px;
			display: inline-block;
			background-repeat: no-repeat;
.shirt-ceremony-step
	&_overlay-two-column
		overflow: hidden;
		position: relative;
		height: 100%;
		top: 0;
		left: 0;
		// min-height: 986px;
		@media (max-width: $md)
			overflow: visible;
			min-height: $holidayProductLendingHeight
		&:before
			position: absolute;	
			content: ''
			width: 100%;
			min-height: $holidayProductLendingHeight
			min-height: 1006px;
			background-color: rgba(32, 35, 46, 0.9);
			z-index: 2;
			top: 0;
			left: 0;
	&_overlay-one-column
		overflow: hidden;
		position: relative;
		.ceremony-popup__wrapper
			top: 50%;
			margin-top: -310px;
		@media (max-width: $md)
			overflow: visible;
			min-height: $holidayProductLendingHeight
		&:before
			position: absolute;	
			content: ''
			width: 100%;
			background-color: rgba(32, 35, 46, 0.9);
			z-index: 2;
			min-height: $holidayProductLendingHeight
			height: 100%;
			top: 0;
			left: 0;
			@media (max-width: $md)
				min-height: 644px;
	&__title
		font-family: CochinItalic
		font-size: 50px;
		margin-bottom: 30px;
		color: #ffffff
		text-align: center
		line-height: 1.2em;
	&__image-wrapper
		// background-image: url("../img/holiday-product/step1.jpg");
		min-height: $holidayProductLendingHeight
		height: $holidayProductLendingHeight
		background-size: cover;
		padding: 0
		height: 740px;
		overflow: hidden;
		@media (max-width: $md)
			display: none;
	&__image
		width: 100%;
		min-width: 934px;
	&__image-info
		display: none;
		@media (max-width: $md)
			position:absolute;
			display: block;
			height: 100%;
			width: auto;
			left: 0;
			top: 0;
	&__info
		background-color: #20232e
		min-height: $holidayProductLendingHeight
		height: $holidayProductLendingHeight
		display: flex;
		flex-direction: column;
		align-items: center;
		position: relative
		justify-content: center;
		color: #ffffff;
		@media (max-width: $md)
			height: calc(100vh - 100px);// 100px = $headerMobileHeight
			min-height: 0;
			overflow: hidden;
		@media (max-width: $md) and (orientation: landscape)
			min-height: 510px;
	&__info-description		
		z-index: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
	&__reload
		position: static;
		top: calc(50% + 540px);
		width: 400px;
		color: #ffffff
		display: flex
		align-items: center;
		justify-content: center;
		@media (max-width: $md)
			width: auto;
	&__reload-text
		z-index: 2
		font-size:18px;
		cursor: pointer
		text-transform: lowercase;
.ceremony-popup
	min-height: 540px
	height: auto
	max-width: 400px;
	width: 100%;
	padding: 30px;
	box-shadow: 0 0 6px 0px #e5e5e5;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	text-align: center;
	position: relative;
	z-index: 3;
	background-color: #ffffff;
	@media (max-width: $md)
		margin: auto;
		padding: 10px;
		min-height:470px;
		max-width: 350px;
	&_double
		max-width: 804px;
		flex-direction: row;
		padding: 0;
		margin-left: -201px;
		@media (max-width: $md)
			flex-direction: column;
			height: auto;
			margin: auto;
			justify-content: flex-start;
			ax-width: 804px;
		.ceremony-popup__img-block
			@media (max-width: $sm)
				height: 200px;
		.ceremony-popup__img
			@media (max-width: $sm)
				max-width: 200px;
				margin-left: -100px;
	&__wrapper
		position: absolute;
		top: 50%;
		margin-top: -270px;
		left: 50%;
		margin-left: -200px;
		width: 100%;
		@media (max-width: $md)
			top: 0
			left: 0;
			margin-left: 20px;
			margin-right: 20px;
			width: calc(100% - 40px);
			margin-top: 20px;
	&__block
		width: 50%;
		padding: 30px;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		@media (max-width: $md)
			width: 100%;
			padding: 10px;
	&__block_left
		border-right: 2px solid #000000
		@media (max-width: $md)
			border: none;
	&__block_right
		border-left: 2px solid #000000
		@media (max-width: $md)
			border: none;
	&__title
		font-size: 28px;
		margin-bottom: 10px;
		@media (max-width: $md)
			font-size: 18px;
	&__subtitle
		font-size: 16px;
		margin-bottom: 18px;
		color: hsla(225, 11%, 37%, 0.75);
		@media (max-width: $md)
			font-size: 14px;
	&__price > .top-product__price
		font-size: 22px;
		margin-bottom: 20px;
	&__btn
		width: 100%;
		background-color: #000000
		color: #ffffff
		display: flex;
		flex-direction: column;
		padding: 18px;
		&:hover, &:focus
			color:  #ffffff
			text-decoration: none
	&__btn-title
		text-transform: uppercase;
		font-size: 15px;
		line-height: 12px;
		margin-bottom: 4px;
		font-family: brandonBold
	&__btn-subtitle
		font-size: 14px;
		line-height: 12px;
	&__img-block
		height: 270px;
		width: 100%;
		margin-left: auto;
		margin-right: auto;
		position: relative;
		display: block;
		overflow: hidden;
		max-width: 290px;
		margin-bottom: 30px;
		@media (max-width: $md)
			margin-bottom: 10px
	&__img
		position: absolute;
		left: 50%;
		display: block;
		max-width: 200px;
		margin: auto;
		margin-left: -100px;
	&__separator
		position: absolute;
		border: 4px solid #000000
		border-radius: 60px;
		width:60px;
		height:60px;
		display: flex;
		align-items: center;
		justify-content: center;
		left: 50%;
		margin-left: -30px;
		background-color: #ffffff;
		top: 56%;	
		@media (max-width: $md)
			display: none		
