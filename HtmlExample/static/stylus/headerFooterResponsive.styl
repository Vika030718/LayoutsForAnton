      justify-content: center;
   &__icon_profile
      min-height: 28px;
   &__icon-menu-close
      display: none
      min-height: 28px;
   &__item
      flex: 1 1 33.33%;
      display: flex;
      align-items: center;
   &__cart
      position: relative
   &__num
      width: 20px;
      height: 20px;
      background-color : #000000;
