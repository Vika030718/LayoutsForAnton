   &__img
      width: 60px;
   &__link
      padding-left: 70px!important;
   &__btns
      padding: 20px;
/* footer
_______________________________________________*/
.footer
   border-top: 1px solid $separator-color
   &__bottom
      padding: 50px 0;
      @media(max-width: $md)
         padding: 0;
   &__title
      font-size: 16px;
      text-transform: uppercase;
      font-family: brandonBold
   &__link
      font-size: 13px;
   &__line
      position: relative;
      @media(max-width: $md)
         border-bottom: 1px solid $separator-color
         padding: 30px 20px;
   &__block
      margin-top: 20px;
      display: none;
      @media(min-width: $md)   
         display: block!important   
   &__arrow
      @media(max-width: $md)
         &:hover:after
            cursor: pointer
         &:after
            font-family: fontAwesome;
            position: absolute;
            font-size: 20px;
            right: 20px;
            margin-top: -11px;
            content: '\f107';
            width: 30px;
            height : 30px;
            top  : 40px;
   &__arrow_up
      @media(max-width: $md)
         &:after
            content: '\f106';   
.services
   &__title
      font-size: 16px;
      text-transform: uppercase;
      margin-bottom: 7px;
      text-align: center;
   &__subtitle
      font-size: 14px;
   &__item
      display: flex;
      height: 245px;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      border-right: 1px solid $separator-color
      @media(max-width: $md)
         border-right: none
         border-bottom: 1px solid $separator-color
         height: 190px;
   &__item:nth-last-child(1)
      border-right: none
      border-bottom: none
.contact-us
