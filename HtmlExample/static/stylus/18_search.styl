.list-product
   margin-bottom: 40px;
   overflow hidden
   @media(max-width: $md)
      text-align: center
   &__img-block
      max-width: 290px;
      // background-color: #f6f6f6;
      margin-bottom: 15px;
      display: block;
      overflow: hidden;
      position: relative
      height: 380px;
      @media(max-width: $md)
         margin: auto;
         height: auto;
         max-width: none;
         margin-bottom: 15px;
   &__img-block_square
      height: 280px;
   &__img-block_side
      height: 220px;
      @media(max-width: $md)
         height: auto;
   &__img-block-cloth
      height: 280px;
      background-color: transparent
   &__img
      display: block;
      margin: auto;
      max-width: 290px;
      position: absolute;
      left: 50%;
      margin-left: -145px;
      @media(max-width: $md)
         width: 100%;
         position: static;
         margin-left: auto;
         max-width: 469px;
   &__img-cloth
      width: 100%;
      margin-left: -50%;
      @media(max-width: $md)
         width: auto;
         margin-left: auto;
   &__title
      font-size: 13px;
      margin-bottom: 5px;
   &__subtitle
      color: $text-pale;
      font-size: 13px;
      margin-bottom: 5px;
   &__price
      font-size: 13px;  
   &__price_old
      text-decoration: line-through;
      font-size: 15px; 
   &__filter-block
      display: flex
.search-list
   margin-top: 1px;
   @media(min-width: $md)
      border-top: 1px solid $separator-color;
   &__wrapper
      @media(min-width: $md)
         padding: 0;
   &__title
      color: #555a69;
      font-size: 24px;
      padding : 30px 5px;
      text-align: center;
      border-top: 1px solid $separator-color;
   &__title-top
      border-top: none;
   &__btn
      max-width: 330px;
      margin: auto;
      display: block!important;
      margin-bottom: 50px;
      margin-left: auto;
      margin-right: auto;
      text-transform: none!important;
   &__article
      margin-bottom: 40px;
   &__article-title 
      font-size: 24px;
      margin-bottom: 30px
   &__article-text
      margin-bottom: 20px
      font-size: 18px;
      color: #747474;
   &__article-link
      color: #888888
      text-decoration: underline
      font-family: CochinItalic
   &__category
      padding: 15px 20px 15px 0;
      text-align: right;
      position: relative;
      display: inline-block;
      margin-left: 20px;
      font-size: 14px;
      color: #555a69
      &:before
         font-family: fontAwesome;
         font-size: 18px;
         position: absolute;
         top: 15px;
         right: 0px;
         content: '\f107';
         color: #555a69
.filter
   &__reset
      font-size: 13px;
      color: #555a69;
   &__results
      padding: 30px 0;
   &__title
      text-transform: uppercase;
      font-size: 14px
      border-top: 1px solid $separator-color;
      padding-top: 25px;
   &__title-popup
      text-transform: uppercase;
      font-size: 14px
      padding-top: 20px;
      margin-right: 30px;
   &__results-title
      text-transform: uppercase;
      font-size: 14px
   &__results-subtitle
      color: #555a69;
      font-size: 14px
   &__list
      margin-top: 15px;
      margin-bottom: 25px;
   &__list_color
      display: flex;
      flex-wrap: wrap;
      flex-direction: row;
      max-width: 130px;
   &__item
      color: #555a69
      font-size: 14px;
      position: relative;
      padding: 6px 0;
   &__item-remove
      position: absolute;
      top: 6px;
      right: 20px;
      &:before
         content: "\f00d"
         position: absolute
         font-family: fontAwesome
         margin-left: 10px;
         color: #555a69;
   &__item_color
      width: 50%; 
   &__value
      position: absolute;
   &__label
      font-size: 14px;
      color: #555a69;
      padding-left: 30px;
      margin-right: 0
      cursor: pointer
      position: relative
      font-weight: normal;
      &:hover
         text-decoration: underline
      &:before
         content: ""
         position: absolute
         left: 0;
         width: 16px;
         height: 16px;
         border-radius: 16px;
         border: 1px solid #555a69;
         top: 1px;
         top: 50%;
         margin-top: -9px;
   &__label_inactive
      color: #e4e4e4;
      &:before
         color: #e4e4e4;
      &:hover
         text-decoration: none
   &__label-checkbox
      &:before
         border-radius: 0;
   &__color
      opacity: 0;
      outline: 0 !important;
      appearance: none;
      width: 50px;
      height: 20px;
      position: absolute;
      z-index: 2;
      margin-top: 0!important;
      cursor: pointer;
   &__color-label
      width: 50px;
      height: 20px; 
      position: relative;
      border-radius: 2px;
   &__color-label_white
      box-shadow: inset 0 0 2px #050505;
      border-radius: 0;
   &__modal
      display: flex;
      background-color: #f5f6f8
      padding-left: 70px;
      padding-top: 0;
      padding-bottom: 0;
      flex-wrap: wrap;
      @media(max-width: $md)
         padding-left: 30px;
   &__modal-title
      font-size: 28px;
   &__block
      flex: 0 1 20%;
      text-align: left;
      @media(max-width: $xl)
         flex: 0 1 33.33%;
      @media(max-width: $lg)
         flex: 0 1 50%;
      @media(max-width: $md)
         flex: 0 1 50%;
      @media(max-width: $sm)
         flex: 0 1 100%;
   &__header
      text-align: left;
      padding: 20px 30px 14px 30px;
      display: flex;
      justify-content: space-between;
   &__footer
      padding: 10px 30px 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      @media(max-width: $md)
         flex-direction: column
         padding-top: 15px;
   &__footer-title
      font-size: 18px;
      color: rgba(0, 0, 0, 0.75);
      margin-right: 25px;
      @media(max-width: $md)
         display: none;
   &__footer-mob-title
      display: none;
      margin-bottom: 10px;
      @media(max-width: $md)
         display: block;
   &__footer-block
      display: flex;
      flex-direction: row;
      width: 100%;
      justify-content: flex-end;
      align-items: center;
      @media(max-width: $md)
         justify-content: center;
         margin-top: 10px;
   &__btn
      color: rgba(0, 0, 0, 0.5);
      max-width: 270px;
      background-color: #ffffff!important;
      font-size: 16px;
      transition: color .2s ease-out, background-color .2s ease-out, border-color .2s ease-out
      &:hover
         color: $hover-main-color!important
         border-color: $hover-main-color!important
      &_clear
         color: rgba(0, 0, 0, 0.5);
         border-color: rgba(0, 0, 0, 0.5);
      &_apply
         color: #000000!important
         border-color: #000000!important;
   &__menu
      padding: 20px 18px!important;
      margin-top: 10px;
      &:before
         position: absolute
         top: -17px
         right: 8px;
         width: 0; 
         height: 0; 
         border-left: 17px solid transparent;
         border-right: 17px solid transparent;
         border-bottom: 17px solid rgba(206, 206, 206, 0.31);
         content: ''
      &:after
         position: absolute
         top: -15px
         right: 10px;
         width: 0; 
         height: 0; 
         border-left: 15px solid transparent;
         border-right: 15px solid transparent;
         border-bottom: 15px solid #ffffff;
         content: ''
   &__menu-link
      font-size: 12px;
      padding: 6px !important;
      transition: none;
      text-transform: uppercase;
input.filter__color[type=checkbox]:checked + label
   &:after
      width: 56px;
      height: 26px;
      content: '';
      border: 2px solid #555a69;
      background-color: transparent;
      display: block;
      position: absolute;
      top: -3px;
      right: -3px;
      border-radius: 2px;
input.filter__value[type=radio]:checked + label
   font-family: brandonBold
   &:after
      content: ""
      background-color: #555a69
      position: absolute
      left: 3px;
      top: 50%;
      margin-top:-6px;
      width: 10px;
      height: 10px;
      border-radius: 10px;
input.filter__value[type=checkbox]:checked + label
   font-family: brandonBold
   &:after
      content: ""
      background-color: #555a69
      position: absolute
      left: 1px;
      top: 50%;
      margin-top: -9px;
      content: "\f00c";
      font-family: fontAwesome;
      line-height: 16px;
      background-color: transparent
.color_green
   background-color: green
.color_white
   background-color: #ffffff
